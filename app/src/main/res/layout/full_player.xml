<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/full_player_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:backgroundTint="@android:color/transparent"
    android:visibility="gone"
    app:cardCornerRadius="24dp"
    app:cardElevation="24dp"
    app:strokeColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_player_sheet"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingBottom="8dp">

            <ImageButton
                android:id="@+id/full_button_add_to_playlist"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_input_add"
                android:contentDescription="@string/add_to_playlist" />

            <ImageButton
                android:id="@+id/full_button_favorite"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/btn_star_big_off"
                android:contentDescription="@string/favorite" />

            <ImageButton
                android:id="@+id/full_player_close"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Close player" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/full_artwork_view"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/player_artwork_content_desc"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.MonochromePlayer.Circle"
                app:strokeColor="?attr/colorOnSurfaceVariant"
                app:strokeWidth="3dp"
                android:background="@drawable/bg_disc_ring"
                android:padding="6dp"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/full_player_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAlignment="center"
                android:text="@string/player_not_playing"
                android:textAppearance="?attr/textAppearanceHeadlineMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/full_player_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:text="@string/player_artist_unknown"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="@color/player_accent" />

            <TextView
                android:id="@+id/full_player_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:text="@string/player_album_unknown"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/player_accent" />
        </LinearLayout>

        <ir.mahozad.multiplatform.wavyslider.WavySlider
            android:id="@+id/full_wavy_seekbar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/full_player_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:weightSum="5">

            <ImageButton
                android:id="@+id/full_button_shuffle"
                style="@style/Widget.MonochromePlayer.ControlButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_rotate"
                android:contentDescription="@string/player_shuffle" />

            <ImageButton
                android:id="@+id/full_button_back"
                style="@style/Widget.MonochromePlayer.ControlButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_rew"
                android:contentDescription="@string/player_back" />

            <ImageButton
                android:id="@+id/full_button_play_pause"
                style="@style/Widget.MonochromePlayer.ControlButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_play"
                android:contentDescription="@string/player_play_pause" />



            <ImageButton
                android:id="@+id/full_button_forward"
                style="@style/Widget.MonochromePlayer.ControlButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/ic_media_ff"
                android:contentDescription="@string/player_forward" />

            <ImageButton
                android:id="@+id/full_button_repeat"
                style="@style/Widget.MonochromePlayer.ControlButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="@string/player_repeat" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
