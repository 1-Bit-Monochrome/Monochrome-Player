<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.navigationrail.NavigationRailView
        android:id="@+id/navigation_rail"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/navigation_rail_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/navigation_rail"
        app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tracks_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1A1A1A">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:paddingBottom="120dp"
                android:scrollbars="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/empty_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:text="@string/empty_state_no_permission"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />




        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/artists_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/artists_recycler_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:paddingBottom="120dp"
                android:scrollbars="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/artists_empty_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:text="@string/placeholder_artists"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/playlists_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_playlists"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textAlignment="center" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/albums_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/albums_recycler_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:paddingBottom="120dp"
                android:scrollbars="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/albums_empty_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:text="@string/placeholder_albums"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/settings_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_title"
                    android:textAppearance="?attr/textAppearanceHeadlineMedium"
                    android:textStyle="bold"
                    android:paddingBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_theme_section"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="@color/player_accent"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/theme_android"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/theme_android"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/theme_material_you"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/theme_material_you"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/theme_monochrome"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/theme_monochrome"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/theme_bozkurt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/theme_bozkurt"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/theme_mecha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/theme_mecha"
                        style="@style/Widget.Material3.Button.TonalButton" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_sort_section"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="@color/player_accent"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/sort_alphabetical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/sort_alphabetical"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/sort_date_added"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:text="@string/sort_date_added" />
                </LinearLayout>

                <!-- Wallpaper controls -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_wallpaper_section"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="@color/player_accent"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/choose_wallpaper"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/choose_wallpaper"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/clear_wallpaper"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/clear_wallpaper"
                        style="@style/Widget.Material3.Button.TonalButton" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Music Folders"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="@color/player_accent"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <CheckBox
                        android:id="@+id/include_downloads_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Downloads" />

                    <CheckBox
                        android:id="@+id/include_documents_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Documents"
                        android:layout_marginStart="12dp" />

                    <CheckBox
                        android:id="@+id/include_music_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Music"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_add_folder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Folder"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <TextView
                        android:id="@+id/folders_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Pick folders to include via Storage Access)"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/folder_list_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_about_section"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="@color/player_accent"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textStyle="bold"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_version"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_description"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

        </ScrollView>

        <FrameLayout
            android:id="@+id/alphabet_popup_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            android:background="#80000000"
            android:elevation="20dp" />

        <FrameLayout
            android:id="@+id/now_playing_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <include layout="@layout/full_player"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/player_sheet"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@android:color/transparent"
        android:visibility="visible"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="88dp"
        app:behavior_hideable="false"
        app:behavior_skipCollapsed="false"
        app:strokeColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_player_sheet"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/player_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/player_drag_handle"
                        android:layout_width="48dp"
                        android:layout_height="4dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_drag_handle" />

                    <TextView
                        android:id="@+id/player_collapsed_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingVertical="8dp"
                        android:text="@string/player_not_playing"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textStyle="bold"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/artwork_view"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/player_artwork_content_desc"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.MonochromePlayer.Circle"
                        app:strokeColor="?attr/colorOnSurfaceVariant"
                        app:strokeWidth="3dp"
                        android:background="@drawable/bg_disc_ring"
                        android:padding="6dp"
                        tools:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/player_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/player_not_playing"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/player_artist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="4dp"
                        android:text="@string/player_artist_unknown"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/player_accent" />

                    <TextView
                        android:id="@+id/player_album"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="4dp"
                        android:text="@string/player_album_unknown"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/player_accent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/player_controls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:weightSum="5">

                    <ImageButton
                        android:id="@+id/button_shuffle"
                        style="@style/Widget.MonochromePlayer.ControlButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_menu_rotate"
                        android:contentDescription="@string/player_shuffle" />

                    <ImageButton
                        android:id="@+id/button_back"
                        style="@style/Widget.MonochromePlayer.ControlButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_media_rew"
                        android:contentDescription="@string/player_back" />

                    <ImageButton
                        android:id="@+id/button_play_pause"
                        style="@style/Widget.MonochromePlayer.ControlButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_media_play"
                        android:contentDescription="@string/player_play_pause" />

                    <ImageButton
                        android:id="@+id/button_forward"
                        style="@style/Widget.MonochromePlayer.ControlButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_media_ff"
                        android:contentDescription="@string/player_forward" />

                    <ImageButton
                        android:id="@+id/button_repeat"
                        style="@style/Widget.MonochromePlayer.ControlButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_menu_revert"
                        android:contentDescription="@string/player_repeat" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
